<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/celebrate"
    tools:context=".WinnerActivity">

    <TextView
        android:id="@+id/isWinner_LBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Is The Winner!"
        android:textColor="#3A2019"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/winner_LBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/paintdropsregular"
        android:text="BlipBlop"
        android:textColor="#19174C"
        android:textSize="50sp" />

        <Button
            android:id="@+id/winner_BTN_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#22B8AA"
            android:fontFamily="@font/g_light"
            android:text="New Game"
            android:textColor="#000000"
            android:textSize="15sp" />


</RelativeLayout>